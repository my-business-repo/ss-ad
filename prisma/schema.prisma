generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int       @id @default(autoincrement())
  user_id   String    @unique @db.VarChar(20)
  role      AdminRole @default(ADMIN)
  name      String
  email     String    @unique
  password  String
  referCode String    @unique @db.VarChar(10)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Customer {
  id                 Int                 @id @default(autoincrement())
  user_id            String              @unique @db.VarChar(20)
  name               String
  email              String              @unique
  password           String
  fundPassword       String?
  phoneNumber        String?
  referCode          String              @unique @db.VarChar(10)
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  status             String              @default("active")
  verificationTokens VerificationToken[]
  accounts           Account[]

  levelId Int?
  level   CustomerLevel? @relation(fields: [levelId], references: [id])
}

model Account {
  id           Int           @id @default(autoincrement())
  account_id   String        @unique @db.VarChar(8)
  customerId   Int
  customer     Customer      @relation(fields: [customerId], references: [id], onDelete: Cascade)
  balance      Float         @default(0)
  profit       Float         @default(0)
  currency     String        @default("USD") @db.VarChar(10)
  status       String        @default("active")
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]

  @@index([customerId], map: "Account_customerId_fkey")
}

model Transaction {
  id             Int               @id @default(autoincrement())
  transaction_id String            @unique @db.VarChar(12)
  accountId      Int
  account        Account           @relation(fields: [accountId], references: [id], onDelete: Cascade)
  type           TransactionType
  amount         Float
  status         TransactionStatus @default(PENDING)
  proofImageUrl  String?           @db.Text
  adminNote      String?           @db.Text
  processedBy    Int?
  processedAt    DateTime?
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  @@index([accountId], map: "Transaction_accountId_fkey")
}

model VerificationToken {
  id         Int       @id @default(autoincrement())
  identifier String
  token      String    @unique
  expires    DateTime
  customerId Int?
  customer   Customer? @relation(fields: [customerId], references: [id])

  @@unique([identifier, token])
  @@index([customerId], map: "VerificationToken_customerId_fkey")
}

model Product {
  id          Int      @id @default(autoincrement())
  product_id  String   @unique @db.VarChar(8)
  name        String
  description String   @db.Text
  price       Float
  commission  Float
  rating      Float    @default(0)
  image       String?
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum AdminRole {
  SUPER_ADMIN
  ADMIN
  MODERATOR
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
}

enum TransactionStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

model CustomerLevel {
  id           Int     @id @default(autoincrement())
  level_id     Int     @unique // Logic level (1, 2, 3...)
  name         String // VIP1, VIP2
  icon         String? // URL
  upgradePrice Float   @default(0)

  // Order Info
  commissionRate          Float // Percentage
  minBalanceRatio         Float // Percentage
  maxBalanceRatio         Float // Percentage
  minProductCount         Int   @default(1)
  maxProductCount         Int   @default(1)
  dailyOrderLimit         Int // 0 = unlimited? No, usually specific.
  minBalanceToAcceptOrder Float @default(0)

  // Withdrawal Info
  minWithdrawalAmount  Float @default(0)
  maxWithdrawalAmount  Float @default(0)
  dailyWithdrawalCount Int   @default(0)

  // Fees - Fixed / Rate
  trcWithdrawalFee   Float @default(0)
  trcWithdrawalRate  Float @default(0)
  ercWithdrawalFee   Float @default(0)
  ercWithdrawalRate  Float @default(0)
  bankWithdrawalFee  Float @default(0)
  bankWithdrawalRate Float @default(0)

  // Upgrade & Refer
  autoUpgradeInviteCount   Int   @default(0)
  referralCommissionRateL1 Float @default(0)
  referralCommissionRateL2 Float @default(0)
  referralCommissionRateL3 Float @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  customers Customer[]
}
